<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neusoft.elmboot.mapper.DeliveryAddressMapper">
    <select id="listDeliveryAddressByUserId" parameterType="String">
        select * from deliveryAddress
        <where>
            userId=#{userId}
        </where>
        order by daId

    </select>

    <select id="getDeliveryAddressByUserId" parameterType="Integer">
        select * from deliveryAddress
        <where>
            daId=#{daId}
        </where>
    </select>

    <insert id="saveDeliveryAddress" parameterType="DeliveryAddress">
        insert into deliveryAddress
        values(null,#{contactName},#{contactSex},#{contactTel},#{address},#{userId})
    </insert>

    <update id="updateDeliveryAddress" parameterType="Delivery Address">
        update deliveryAddress set
        contactName=#{contactName},contactSex=#{contactSex},contactTel=#{contactTel},address=#{address}
        <where>
            daId=#{daId}
        </where>
    </update>

    <delete id="removeDeliveryAddress" parameterType="Integer">
        delete from deliveryAddress
        <where>
            daId=#{daId}
        </where>
    </delete>

</mapper>